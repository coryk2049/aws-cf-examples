
#
# Delete subscribers index
#
curl -k -XDELETE https://localhost:9200/subscribers

#
# Create subscribers index
#
curl -k -XPUT https://localhost:9200/subscribers?pretty=true -d ' {
    "settings": {
        "index": {
            "number_of_shards": 3,
            "number_of_replicas": 0
        }
    }
}
'

#
# Create subscribers index mapping
#
curl -k -XPUT https://localhost:9200/subscribers/_mapping/subscriber?pretty=true -d ' {
    "subscriber": {
        "properties": {
            "name": {
                "type": "string",
                "store": true
            },
            "email": {
                "type": "string",
                "store": true
            },
            "phoneno": {
                "type": "string",
                "store": true
            },
            "status" : {
                "type" : "boolean",
                "store": "true"
            },
            "insert_date": {
                "type": "date",
                "format": "date_time",
                "store": true
            }
        }
    }
}
'

#
# Insert some data into subscribers with auto generation of _id
#
curl -k -XPOST https://localhost:9200/subscribers/subscriber/?pretty=true -d ' {
    "name": "Robert Smith",
    "email": "rsmith@example.com",
    "phoneno": "5711002001",
    "status": "true",
    "insert_date": "2017-12-01T01:02:03.000-06:00"
}
' -H 'Content-Type: application/json'

