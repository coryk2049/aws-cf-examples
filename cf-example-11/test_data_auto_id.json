#
# Example of queries
#
curl -k -XGET https://localhost:9200/subscribers/subscriber/_search?pretty=true -d ' {
    "query": {
        "query_string": {
            "query": "example.com"
        }
    }
}
'

curl -k -XGET https://localhost:9200/subscribers/subscriber/_search?pretty=true -d ' {
    "query": {
        "terms": {
            "_id": ["2","3"]
        }
    }
}
'

curl -k -XGET https://localhost:9200/subscribers/subscriber/_search?pretty=true -d ' {
    "query": {
        "bool": {
            "filter": {
                "term": {
                    "status": "false"
                }
            }
        }
    }
}
'

curl -k -XGET https://localhost:9200/subscribers/subscriber/_search?pretty=true -d ' {
    "query": {
        "bool": {
            "must": [
                {
                    "range": {
                        "insert_date": {
                            "gte": "2017-12-01T01:00:00.000-06:00",
                            "lte": "2017-12-03T01:00:00.000-06:00"
                        }
                    }
                }
            ]
        }
    }
}
'
